{# templates/contact/envoyer_mail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Envoyer un Mail{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}

    <div class="container">
        <h1>Envoyer un mail</h1>

        {{ form_start(formcontact) }}
        <div class="form-row">
            <div class="col">
                {{ form_row(formcontact.email, {'label': "L'email"}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                {{ form_row(formcontact.sujet, {'label': "Votre sujet"}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                {{ form_row(formcontact.message, {'label': "Votre message"}) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <input type="submit" value="Envoyer">
            </div>
        </div>
        {{ form_end(formcontact) }}
    </div>

    {% include 'footer.html.twig' %}
{% endblock %}
